{% extends 'template.html.twig' %}

{% block title %}
    Détails
{% endblock %}

{% block header %}
    <header id="head" class="secondary"></header>
{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="h3 mb-2 text-gray-800">Service Details</h1>
        <p class="mb-4">"Service Details" offers a clear overview of a service,
            highlighting its key features with images and explanations. </p>

        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" style="max-width: 60%; margin: auto;margin-bottom: 20px;">
            <!-- Indicateurs -->
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>

            <!-- Wrapper pour les diapositives -->
            <div class="carousel-inner" style="height: 500px; overflow: hidden;">

                <div class="item active" style="height: 100%;">
                    <img src="{{ asset('uploads/servicePhoto/'~ service.image[0]) }}"
                         alt="Première diapositive"
                         style="width: 100%; height: 100%; object-fit: cover;">
                </div>
                {% for img in images %}
                <div class="item" style="height: 100%;">
                    <img src="{{ asset('uploads/servicePhoto/' ~ img) }}"
                         alt="Deuxième diapositive"
                         style="width: 100%; height: 100%; object-fit: cover;">
                </div>
                {% endfor %}
                {#<div class="item" style="height: 100%;">
                    <img src="{{ asset('uploads/servicePhoto/clim-67163b86902c0.jpg') }}"
                         alt="Troisième diapositive"
                         style="width: 100%; height: 100%; object-fit: cover;">
                </div>#}
            </div>

            <!-- Contrôles -->
            <a class="left carousel-control" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true">◀</span>
                <span class="sr-only">Précédent</span>
            </a>
            <a class="right carousel-control" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true">▶</span>
                <span class="sr-only">Suivant</span>
            </a>
        </div>
        <div class="card shadow mb-4">
            <h3>Availability</h3>
            <div class="card-body">
                <div class="table-responsive" style="width: 90%">
                    <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                        <div class="row">
                            <div class="col-sm-12">
                                <table class="table table-bordered dataTable" id="dataTable" width="100%" cellspacing="0" role="grid" aria-describedby="dataTable_info" style="width: 100%;">
                                    <thead>
                                    <tr role="row">
                                        <th class="sorting sorting_asc" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Title: activate to sort column descending" style="width: 106.2px;">Monday</th>
                                        <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Description" style="width: 162.2px;">Tuesday</th>
                                        <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Location" style="width: 130.2px;">Wednesday</th>
                                        <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Price" style="width: 130.2px;">Thursday</th>
                                        <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Action" style="width:20px;text-align: center">Friday</th>
                                        <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Action" style="width:20px;text-align: center">Saturday</th>
                                        <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Action" style="width:20px;text-align: center">Sunday</th>
                                    </tr>
                                    </thead>
                                    <tbody>

                                        <tr class="odd">
                                            {% for day in service.availability %}
                                            <td class="sorting_1">
                                                {% if day.unavailable %}
                                                    <p>Unavailable</p>
                                                {% else %}
                                                <p>From :{{ day.morning }}</p>
                                                <p>To: {{ day.afternoon }}</p>
                                                {% endif %}
                                            </td>
                                            {% endfor %}
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <div class="service-details" style="background-color: white; padding: 10px; border-radius: 5px; margin-bottom: 10px;">
            <div class="card shadow mb-4">
                <h3>Service Details</h3>
                <div class="card-body">
                    <div class="table-responsive" style="width: 90%">
                        <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                            <div class="row">
                                <div class="col-sm-12">
                                    <table class="table table-striped">
                                        <tbody>
                                        <tr><td class="sorting_1">Category</td>
                                            <td>{{ service.category.name }}</td>
                                        </tr>
                                        <tr>
                                            <td class="sorting_1">Title</td>
                                            <td>{{ service.title }}</td>
                                        </tr>
                                        <tr>
                                            <td class="sorting_1">Description</td>
                                            <td>{{ service.description }}</td>
                                        </tr>
                                        <tr>
                                            <td class="sorting_1">Price </td>
                                            <td>{{ service.price }} TND</td>
                                        </tr>
                                        <tr>
                                            <td class="sorting_1">Location</td>
                                            <td>{{ service.location }}</td>
                                        </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>

        <!-- Avis des clients -->
        <div class="reviews" style="background-color: #fff; padding: 20px; border-radius: 5px; max-height: 300px; overflow-y: auto; margin-bottom: 20px;">
            <h3 style="font-size: 22px; margin-bottom: 10px;">Avis des clients</h3>

            <!-- Exemple d'avis utilisateur -->
            <div class="review" style="margin-bottom: 20px; border-bottom: 1px solid #ccc; padding-bottom: 10px;">
                <div class="stars" style="margin-bottom: 10px;">
                    <span class="star filled" style="color: gold; font-size: 20px;">★</span>
                    <span class="star filled" style="color: gold; font-size: 20px;">★</span>
                    <span class="star filled" style="color: gold; font-size: 20px;">★</span>
                    <span class="star filled" style="color: gold; font-size: 20px;">★</span>
                    <span class="star" style="color: gold; font-size: 20px;">★</span>
                </div>
                <p><strong>Jean Dupont</strong> a dit : Excellent service, je le recommande !</p>
                <p style="color: #888;"><small>Posté le 10/10/2024</small></p>
            </div>

            <div class="review" style="margin-bottom: 20px; border-bottom: 1px solid #ccc; padding-bottom: 10px;">
                <div class="stars" style="margin-bottom: 10px;">
                    <span class="star filled" style="color: gold; font-size: 20px;">★</span>
                    <span class="star filled" style="color: gold; font-size: 20px;">★</span>
                    <span class="star filled" style="color: gold; font-size: 20px;">★</span>
                    <span class="star" style="color: gold; font-size: 20px;">★</span>
                    <span class="star" style="color: gold; font-size: 20px;">★</span>
                </div>
                <p><strong>Marie Durant</strong> a dit : Bon service, mais peut être amélioré.</p>
                <p style="color: #888;"><small>Posté le 12/10/2024</small></p>
            </div>

            <div class="review" style="margin-bottom: 20px; border-bottom: 1px solid #ccc; padding-bottom: 10px;">
                <div class="stars" style="margin-bottom: 10px;">
                    <span class="star filled" style="color: gold; font-size: 20px;">★</span>
                    <span class="star filled" style="color: gold; font-size: 20px;">★</span>
                    <span class="star filled" style="color: gold; font-size: 20px;">★</span>
                    <span class="star filled" style="color: gold; font-size: 20px;">★</span>
                    <span class="star filled" style="color: gold; font-size: 20px;">★</span>
                </div>
                <p><strong>Paul Martin</strong> a dit : Service impeccable, très satisfait.</p>
                <p style="color: #888;"><small>Posté le 15/10/2024</small></p>
            </div>

            <!-- Si aucun avis n'est disponible -->
            <p>Aucun avis pour le moment. Revenez plus tard pour consulter les commentaires des clients.</p>
        </div>

    </div>
{% endblock %}

{% block javascript %}
<script>
    $(document).ready(function () {
    $('#carouselExampleIndicators').carousel({
        interval: false, // Désactiver l'auto-défilement automatique
        pause: 'hover',  // Mettre en pause au survol
        wrap: true       // Permet de revenir à la première diapositive après la dernière
    });

    // Contrôles pour défiler manuellement
    $('.left.carousel-control').click(function () {
    $('#carouselExampleIndicators').carousel('prev');
});

    $('.right.carousel-control').click(function () {
    $('#carouselExampleIndicators').carousel('next');
});
});
</script>
{% endblock %}
