{% extends 'template.html.twig' %}
{% block title %}
    Reservation
{% endblock %}
{% block header %}
    <header id="head" class="secondary"></header>
{% endblock %}
{% block body %}
    <div class="container">

        <ol class="breadcrumb">
            <li><a href="index.html">Home</a></li>
            <li class="active">Reservation</li>
        </ol>
        <div class="row justify-content-center w-100">

            <!-- Form Column -->
            <div class="col-xl-5 col-lg-6 col-md-8">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-5">
                        <!-- Form Heading -->
                        <div class="text-center mb-4">
                            <h1 class="h4 text-gray-900">Book Now</h1>
                        </div>

                        <!-- Form Start -->
                        {{ form_start(form, {'attr': {'class':'user'}}) }}

                        <!-- Name Field -->
                        <div class="form-group mb-3">
                            <label for="">Service</label>
                            <input type="text" value="{{ service.title}}" class="form-control w-100" style="border-radius: 5px;" disabled>
                        </div>
                        <div class="form-group mb-3">
                            <label for="">Location</label>
                            <input type="text" value="{{ service.location}}" class="form-control w-100" style="border-radius: 5px;" disabled>
                        </div>
                        <div class="form-group mb-3">
                            {{ form_label(form.booking_date, 'Booking Date') }}
                            {{ form_widget(form.booking_date, {'attr': {'class':'form-control w-100', 'style': 'border-radius: 5px;'}}) }}
                            {{ form_errors(form.booking_date) }}
                        </div>

                        <!-- Description Field -->
                        <div class="form-group mb-3">
                            {{ form_label(form.paymentMethod, 'Payment Method') }}
                            {{ form_widget(form.paymentMethod, {'attr': {'class':'form-control w-100', 'style': 'border-radius: 5px;'}}) }}
                            {{ form_errors(form.paymentMethod) }}
                        </div>
                        <div class="form-group mb-3">
                            <label for="">Total</label>
                            <input type="text" value="{{ service.price }} TND" class="form-control w-100" style="border-radius: 5px;" disabled>
                        </div>

                        <!-- Submit Button -->
                        <div class="form-group">
                            <input type="submit" value="Book" class="btn btn-primary btn-user btn-block" style="border-radius: 5px;">
                        </div>

                        {{ form_end(form) }}
                        <!-- Form End -->
                    </div>
                </div>
            </div>

        </div>
    </div>
{% endblock %}